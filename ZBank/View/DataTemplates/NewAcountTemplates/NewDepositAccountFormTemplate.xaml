<UserControl
    x:Class="ZBank.View.DataTemplates.NewAcountTemplates.NewDepositAccountFormTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBank.View.DataTemplates.NewAcountTemplates"
    xmlns:modelBObj="using:ZBank.Entities.BusinessObjects"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackground}"
    d:DesignHeight="300"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,40,30,0"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="Gray"
            Text="Deposit Amount" />
        <TextBox
            Grid.Row="1"
            Margin="0,10,0,10"
            MinWidth="500"
            x:Name="AmountTextBox"
            MaxWidth="400"
            Text="{Binding DepositAccount.DepositAmount, Mode=TwoWay}"
            TextChanging="AmountTextBox_TextChanging"
            PlaceholderText="Enter Amount in INR" />

        <TextBlock
            Margin="0,20,0,10"
            Grid.Row="2"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="Gray"
            Text="Tenure of Deposit" />
        <DropDownButton
            Margin="0,0,0,10"
            Grid.Row="3"
            x:Name="TenureDropDownButton"
            MinWidth="250"
            HorizontalAlignment="Left"
            CornerRadius="8">
            <DropDownButton.Content>
                <TextBlock
                    HorizontalAlignment="Center"
                    x:Name="TenureText"
                    Text="Choose Tenure" />
            </DropDownButton.Content>
            <DropDownButton.Flyout>
                <Flyout
                    Placement="Bottom"
                    FlyoutPresenterStyle="{StaticResource CustomFlyoutStyle}">
                    <ListView
                        x:Name="TenureList"
                        SelectionChanged="TenureList_SelectionChanged"
                        ItemsSource="{Binding TenureList, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate
                                x:DataType="modelBObj:DropDownItem">
                                <TextBlock
                                    Text="{Binding Text}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Flyout>
            </DropDownButton.Flyout>
        </DropDownButton>

        <TextBlock
            Grid.Row="2"
            Text="Calculated Interest Rate"
            Margin="0,20,0,10"
            HorizontalAlignment="Right"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="Gray"/>
        
        <TextBlock
            Grid.Row="3"
            Margin="0,0,0,10"
            FontSize="18"
            HorizontalAlignment="Right"
            FontWeight="{ThemeResource ApplicationForeground}"
            Text="7.26" />

        <TextBlock
            Grid.Row="4"
            Text="Repayment Account Number"
            Margin="0,20,0,10"
            HorizontalAlignment="Left"
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="Gray" />

        <DropDownButton
            Grid.Row="5"
            x:Name="AccountsDropdownButton"
            MaxWidth="500"
            HorizontalAlignment="Stretch"
            CornerRadius="8">
            <DropDownButton.Content>
                <TextBlock
                    HorizontalAlignment="Center"
                    x:Name="AccountsText"
                    Text="Select Account" />
            </DropDownButton.Content>
            <DropDownButton.Flyout>
                <Flyout
                    Placement="Bottom"
                    FlyoutPresenterStyle="{StaticResource CustomFlyoutStyle}">
                    <ListView
                        x:Name="AccountsList"
                        SelectionChanged="AccountsList_SelectionChanged"
                        ItemsSource="{x:Bind AllAccounts, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate
                                x:DataType="modelBObj:AccountBObj">
                                <TextBlock
                                    Text="{x:Bind}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Flyout>
            </DropDownButton.Flyout>
        </DropDownButton>

    </Grid>
</UserControl>
