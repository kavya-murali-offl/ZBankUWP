<UserControl
    x:Class="ZBank.View.DataTemplates.CardViewTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBank.View.DataTemplates"
    xmlns:model="using:ZBank.Entities"
    xmlns:converter="using:ZBank.Utilities.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <DataTemplate x:Key="CreditCardTemplate">
            <StackPanel>
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    FontWeight="SemiBold"
                    Foreground="Azure"
                    FontSize="16"
                    Padding="0,5,0,0"
                    Text="Available Credit Limit" />
                <!--<TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    FontWeight="Bold"
                    Foreground="Azure"
                    FontSize="18"
                    Padding="0,0,0,0"
                    Text="{Binding ElementName=GridRoot, Path=AvailableCreditLimit}" />-->
            </StackPanel>
            
        </DataTemplate>
        <DataTemplate
            x:Key="NoCardsToShow">
            <TextBlock
                Text="No Cards To Show" />
        </DataTemplate>
        <converter:CurrencyConverter x:Key="CurrencyConverter"/>
    </UserControl.Resources>
    <Grid
        x:Name="GridRoot"
        MinHeight="200"
        MaxWidth="400"
        MaxHeight="400"
        HorizontalAlignment="Stretch"
        Padding="15"
        CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush
                ImageSource="{Binding BackgroundImage, Mode=OneWay}"
                Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <TextBlock
            HorizontalAlignment="Left"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Foreground="Azure"
            Text="{x:Bind Card.Type, Mode=OneWay}" />
        <Image
            MaxHeight="40"
            HorizontalAlignment="Right"
            Source="{x:Bind ProviderLogo, Mode=OneWay}" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="Azure"
            FontSize="23"
            Padding="0,10,0,10"
            Text="{x:Bind Card.CardNumber, Mode=OneWay}" />
        <ContentControl
            x:Name="CardSpecificTemplate" />
    </Grid>
</UserControl>
