                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Text="{Binding BranchName}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Flyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>-->
                    
                    <TextBlock
                    Grid.Row="2"
                        Margin="0,10,0,0"
                        Grid.Column="1"
                    TextWrapping="Wrap"
                        Text="{x:Bind ViewModel.FieldErrors['Branch'], Mode=OneWay}"
                        Foreground="IndianRed" />

                    <TextBlock
                    Grid.Row="3"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Gray"
                        Text="Choose Account Type" />

                    <controls:RadioButtons
                        Grid.Row="4"
                        HorizontalAlignment="Center"
                        x:Name="AccountTypeButton"
                        MaxColumns="3"
                        Grid.ColumnSpan="2"
                        ItemsSource="{x:Bind ViewModel.AccountTypes}"
                        SelectionChanged="AccountTypeButton_SelectionChanged">
                    </controls:RadioButtons>

                    <ContentControl
                        Margin="0,10,0,10"
                        HorizontalContentAlignment="Stretch"
                        Grid.ColumnSpan="2"
                        Grid.Row="5"
                        Content="{x:Bind ViewModel.SelectedTemplate, Mode=OneWay}"
                        MinHeight="200"
                        x:Name="AccountForm">
                    </ContentControl>

                    <TextBlock
                        Grid.Row="6"
                        Margin="0,20,0,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Gray"
                        Text="KYC Documents" />
                    
                    <Button
                        Margin="0,20,0,0"
                        x:Name="UploadButton"
                        Grid.Row="6"
                        Grid.Column="1"
                        Click="UploadButton_Click"
                        Content="Upload Documents"
                        HorizontalAlignment="Left"
                        Style="{ThemeResource PrimaryButton}"
                       />

                    <TextBlock
                        Grid.Row="7"
                        FontSize="14"
                        Margin="0,10,0,0"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="{x:Bind ViewModel.UploadInfo, Mode=OneWay}"
                        x:Name="PickFilesOutputTextBlock"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="1"
                        Foreground="IndianRed"
                        Margin="0,10,0,10"
                        Text="{x:Bind ViewModel.FieldErrors['KYC'], Mode=OneWay}" />
                </Grid>

                <userControls:AppNotification
                        Grid.ColumnSpan="2"
                        Margin="0,10,10,0"
                        HorizontalAlignment="Right" />

                <Button
                    Margin="30"
                    MinWidth="200"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="3"
                    x:Name="SubmitButton"
                    Click="SubmitButton_Click"
                    Content="Apply"
                    Style="{ThemeResource PrimaryButton}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
   
