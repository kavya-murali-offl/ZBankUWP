                        <DropDownButton.Content>
                            <TextBlock
                                MaxWidth="300"
                                TextTrimming="CharacterEllipsis"
                                HorizontalAlignment="Center"
                                x:Name="BranchText"
                                Text="{x:Bind ViewModel.FieldValues['Branch'], TargetNullValue='Select Branch'}" />
