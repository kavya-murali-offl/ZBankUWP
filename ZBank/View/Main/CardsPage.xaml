<Page
    x:Class="ZBank.View.Main.CardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBank.View.Main"
    xmlns:converter="using:ZBank.Utilities.Converters"
    xmlns:usercontrols="using:ZBank.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded">
    <Page.Resources>
        <converter:CurrencyConverter
            x:Key="CurrencyConverter" />
        <converter:BooleanToVisibilityConverter
            x:Key="BoolToVisibilityConverter" /> 
        <converter:IndexToPositionConverter
            x:Key="IndexToPositionConverter" />  
        <converter:DecimalToDoubleConverter
            x:Key="DecimalToDoubleConverter" />   
        <converter:MaskConverter
            x:Key="MaskConverter" />  
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Margin="5"
                Padding="20"
                CornerRadius="8"
                Background="{ThemeResource ApplicationBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Text="Total Credit Cards" />
                <TextBlock
                    Padding="10"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    Text="1" />
            </Grid>
            <Grid
                Margin="5"
                Grid.Column="1"
                Padding="20"
                CornerRadius="8"
                Background="{ThemeResource ApplicationBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Text="Total Debit Cards" />
                <TextBlock
                    Padding="10"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    Text="1" />
            </Grid>
        </Grid>
        <Grid
            Margin="10"
            Grid.Row="1"
            Background="Transparent"
            MaxWidth="800"
            HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                HorizontalAlignment="Left"
                Canvas.ZIndex="20"
                x:Name="LeftCard"
                Opacity="0.3"
                Width="320"
                Height="220"
                Margin="0,0,0,10">
                <usercontrols:CardElementView
                    TemplateCard="{x:Bind ViewModel.DataModel.LeftCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Canvas.ZIndex="40"
                Grid.Column="1"
                x:Name="OnViewCard"
                Width="400"
                Height="240"
                Margin="0,0,0,10"
                HorizontalAlignment="Center">
                <usercontrols:CardElementView
                    TemplateCard="{x:Bind ViewModel.DataModel.OnViewCard, Mode=OneWay}"
                    DataContext="{x:Bind ViewModel.DataModel.OnViewCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Opacity="0.3"
                HorizontalAlignment="Right"
                Canvas.ZIndex="20"
                x:Name="RightCard"
                Width="320"
                Height="220"
                Margin="0,0,0,10">
                <usercontrols:CardElementView
                    TemplateCard="{x:Bind ViewModel.DataModel.RightCard, Mode=OneWay}" />
            </Grid>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Grid.Row="1">
                <Button
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    Style="{ThemeResource FrameNavButton}"
                    Command="{x:Bind ViewModel.PreviousCardCommand}"
                    CornerRadius="40"
                    Padding="5"
                    Margin="20,0,20,0"
                    x:Name="PreviousButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00E;" />
                    </Button.Content>
                </Button>
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Text="{x:Bind ViewModel.DataModel.OnViewCardIndex, Mode=OneWay, Converter={StaticResource IndexToPositionConverter}}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Margin="5,0,5,0"
                    Text="/" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource ApplicationForeground}"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Text="{x:Bind ViewModel.AllCards.Count, Mode=OneWay}" />
                <Button
                    Style="{ThemeResource FrameNavButton}"
                    CornerRadius="40"
                    Command="{x:Bind ViewModel.NextCardCommand}"
                    Padding="5"
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    x:Name="NextButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00F;" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <usercontrols:OneByTwoGrid
            Grid.Row="2">
            <usercontrols:OneByTwoGrid.Column1Content>
                <Grid
                    HorizontalAlignment="Stretch"
                    Padding="20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />       <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" MaxWidth="200" />
                        <ColumnDefinition
                            Width="*"
                            MaxWidth="200" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        FontSize="18"
                        Text="Card Details" />

                    <Button
                        x:Name="ResetPinButton"
                        Click="ResetPinButton_Click"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{ThemeResource PrimaryButton}">
                        <Button.Content>
                            <TextBlock
                                Text="Reset Pin" />
                        </Button.Content>
                    </Button>

                    <TextBlock
                        Margin="0,10,0,10"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Text="Card Number" />

                    <Grid
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        CornerRadius="5"
                        Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Padding="5"
                            Text="{x:Bind ViewModel.DataModel.OnViewCard.CardNumber, Mode=OneWay}" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Grid.Row="5"
                        Grid.Column="1"
                        Text="CVV" />
                    <Grid
                        Grid.Row="6"
                        Grid.Column="1"
                        CornerRadius="5"
                        Margin="0,10,0,10"
                        Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                        
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Visibility="{x:Bind HideEyeButton.Visibility, Mode=OneWay}"
                            FontWeight="Bold"
                            Padding="5"
                            Text="{x:Bind ViewModel.DataModel.OnViewCard.CVV, 
                                Mode=OneWay,
                                Converter={StaticResource MaskConverter}}" />
                        
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Visibility="{x:Bind ViewEyeButton.Visibility,Mode=OneWay}"
                            FontWeight="Bold"
                            Padding="5"
                            Text="{x:Bind ViewModel.DataModel.OnViewCard.CVV, 
                                Mode=OneWay}" />
                        <Button
                            x:Name="ViewEyeButton"
                            Click="ViewEyeButton_Click"
                            Visibility="Collapsed"
                            FontStretch="Expanded"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Right"
                            Style="{ThemeResource IconButton}">
                            <FontIcon
                                FontSize="14"
                                Glyph="&#xE7B3;" />
                        </Button>
                        <Button
                            x:Name="HideEyeButton"
                            FontStretch="ExtraExpanded"
                            Click="HideEyeButton_Click"
                            Visibility="Visible"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Right"
                            Style="{ThemeResource IconButton}">
                            <FontIcon
                                FontSize="14"
                                Glyph="&#xED1A;" />
                        </Button>
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Grid.Row="5"
                        Text="Expiry Date" />
                    <Grid
                        Grid.Row="6"
                        Margin="0,10,5,10"
                        CornerRadius="5"
                        Background="{ThemeResource ApplicationBackgroundThemeBrush}">

                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Padding="5"
                            Text="{x:Bind ViewModel.DataModel.OnViewCard.ExpiryMonth, Mode=OneWay}" />
                    </Grid>
                    <TextBlock
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Grid.Row="7"
                        Text="CardType" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Margin="25,20,0,0"
                        Grid.Row="8"
                        Text="{x:Bind ViewModel.DataModel.OnViewCard.Type, Mode=OneWay}" />

                </Grid>
            </usercontrols:OneByTwoGrid.Column1Content>
            <usercontrols:OneByTwoGrid.Column2Content>
                <Grid
                    HorizontalAlignment="Stretch"
                    Padding="20,0,20,20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,10"
                        FontWeight="SemiBold"
                        Grid.Row="3"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="Daily Transaction Limit" />
                    <ToggleButton
                        Grid.Column="1"
                        Grid.Row="3"
                        Style="{ThemeResource PrimaryToggleButton}"
                        x:Name="ChangeLimitButton"
                        Margin="0,20,0,10"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        FontSize="14"
                        Content="Change" />
                    <Slider
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        Minimum="10000"
                        Value="{x:Bind ViewModel.DataModel.OnViewCard.SpendingLimit, Mode=OneWay, Converter={StaticResource DecimalToDoubleConverter}}"
                        Maximum="50000"
                        IsEnabled="{x:Bind ChangeLimitButton.IsChecked.GetValueOrDefault(), Mode=OneWay}"
                        StepFrequency="100"
                        x:Name="LimitSlider"
                        ValueChanged="Slider_ValueChanged"
                        SmallChange="100" />
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{x:Bind LimitSlider.Minimum, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        HorizontalAlignment="Right"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{x:Bind LimitSlider.Maximum, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                    <TextBlock
                        Margin="10"
                        FontSize="16"
                        Grid.Row="7"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Total Spending limit" />

                    <TextBlock
                        FontSize="18"
                        Grid.Row="8"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Text="{x:Bind LimitSlider.Value,Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />

                </Grid>
            </usercontrols:OneByTwoGrid.Column2Content>
        </usercontrols:OneByTwoGrid>
    </Grid>
</Page>
 