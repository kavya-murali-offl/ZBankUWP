<Page
    x:Class="ZBank.View.Main.CardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBank.View.Main"
    xmlns:converter="using:ZBank.Utilities.Converters"
    xmlns:usercontrols="using:ZBank.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded">
    <Page.Resources>
        <converter:CurrencyConverter
            x:Key="CurrencyConverter" />
        <converter:BooleanToVisibilityConverter
            x:Key="BoolToVisibilityConverter" /> 
        <converter:NullToVisibilityConverter
            x:Key="NullToVisibilityConverter" /> 
        <converter:IndexToPositionConverter
            x:Key="IndexToPositionConverter" />  
        <converter:DecimalToDoubleConverter
            x:Key="DecimalToDoubleConverter" />   
        <converter:MaskConverter
            x:Key="MaskConverter" />
        <Storyboard
            x:Name="FadeStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="CardElementStoryBoard1"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1.0"
                Duration="0:0:0.4" />
            <DoubleAnimation
                Storyboard.TargetName="CardElementStoryBoard2"
                Storyboard.TargetProperty="Opacity"
                From="0.5"
                To="1.0"
                Duration="0:0:0.4" />
            <DoubleAnimation
                Storyboard.TargetName="CardElementStoryBoard3"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1.0"
                Duration="0:0:0.4" />
        </Storyboard>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Button
                Margin="10,0,30,10"
                Style="{ThemeResource PrimaryButton}"
                HorizontalAlignment="Right"
                x:Name="AddCardButton"
                Click="AddCardButton_Click">
                <Button.Content>
                    <TextBlock
                        x:Uid="AddCreditCard" />
                </Button.Content>
            </Button>
        </Grid>
        <GridView
            Grid.Row="1"
            ItemContainerStyle="{ThemeResource DefaultGridViewItemStyling}"
            SelectionMode="None">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        ItemWidth="300"
                        MaximumRowsOrColumns="3" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridViewItem>
                <Grid
                    Margin="5"
                    Padding="20"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        FontWeight="SemiBold"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        x:Uid="TotalCreditCards" />
                    <TextBlock
                        Padding="10"
                        FontSize="20"
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Text="{x:Bind ViewModel.DataModel.TotalCreditCards, Mode=OneWay}" />
                </Grid>
            </GridViewItem>
            <GridViewItem>
                <Grid
                    Margin="5"
                    Padding="20"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        FontWeight="SemiBold"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        x:Uid="TotalDebitCards" />
                    <TextBlock
                        Padding="10"
                        FontSize="20"
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Text="{x:Bind ViewModel.DataModel.TotalDebitCards, Mode=OneWay}" />
                </Grid>
            </GridViewItem>
            <GridViewItem>
                <Grid
                    HorizontalAlignment="Stretch"
                    Margin="5"
                    Padding="20"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        FontWeight="SemiBold"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        x:Uid="TotalCards" />
                    <TextBlock
                        Padding="10"
                        FontSize="20"
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Text="{x:Bind ViewModel.DataModel.TotalAllCards, Mode=OneWay}" />
                </Grid>
            </GridViewItem>
        </GridView>
        <Grid
            Margin="10"
            Grid.Row="2"
            Background="Transparent"
            MaxWidth="800"
            HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
           
            <Grid
                HorizontalAlignment="Left"
                Canvas.ZIndex="20"
                x:Name="LeftCard"
                Opacity="0.3"
                Width="320"
                Height="220"
                Margin="0,0,0,10">
                <usercontrols:CardElementView
                    x:Name="CardElementStoryBoard1"
                    TemplateCard="{x:Bind ViewModel.DataModel.LeftCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Background="{ThemeResource ApplicationBackground}"
                Canvas.ZIndex="40"
                Grid.Column="1"
                x:Name="OnViewCard"
                Width="400"
                Height="240"
                CornerRadius="8"
                Margin="0,0,0,10"
                HorizontalAlignment="Center">
                <usercontrols:CardElementView
                    x:Name="CardElementStoryBoard2"
                    TemplateCard="{x:Bind ViewModel.DataModel.OnViewCard, Mode=OneWay}"
                    DataContext="{x:Bind ViewModel.DataModel.OnViewCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Opacity="0.3"
                HorizontalAlignment="Right"
                Canvas.ZIndex="20"
                x:Name="RightCard"
                Width="320"
                Height="220"
                Margin="0,0,0,10">
                <usercontrols:CardElementView
                    x:Name="CardElementStoryBoard3"
                    TemplateCard="{x:Bind ViewModel.DataModel.RightCard, Mode=OneWay}" />
            </Grid>
           
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Grid.Row="2">
                <Button
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    Style="{ThemeResource FrameNavButton}"
                    Command="{x:Bind ViewModel.PreviousCardCommand}"
                    CornerRadius="40"
                    Padding="5"
                    Margin="20,0,20,0"
                    Tapped="PreviousButton_Tapped"
                    x:Name="PreviousButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00E;" />
                    </Button.Content>
                </Button>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    Text="{x:Bind ViewModel.DataModel.OnViewCardIndex, Mode=OneWay, Converter={StaticResource IndexToPositionConverter}}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    Margin="5,0,5,0"
                    Text="/" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource ApplicationForeground}"
                    FontSize="18"
                    Text="{x:Bind ViewModel.DataModel.TotalAllCards, Mode=OneWay}" />
                
                <Button
                    Style="{ThemeResource FrameNavButton}"
                    CornerRadius="40"
                    Tapped="NextButton_Tapped"
                    Command="{x:Bind ViewModel.NextCardCommand}"
                    Padding="5"
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    x:Name="NextButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00F;" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
        <GridView
            Visibility="{x:Bind ViewModel.DataModel.AllCards, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}"
            HorizontalAlignment="Center"
            SelectionMode="None"
            ItemContainerStyle="{ThemeResource DefaultGridViewItemStyling}"
            Grid.Row="3">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        MinWidth="400"
                        ItemHeight="320"
                        MaximumRowsOrColumns="3" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridViewItem>
                <Grid
                    MinWidth="400"
                    Padding="20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" /> 
                        <RowDefinition
                            Height="Auto" /> 
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*"
                            MaxWidth="250" />
                        <ColumnDefinition
                            Width="*"
                            MaxWidth="250" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        FontSize="18"
                        x:Uid="CardDetails" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        FontSize="14"
                        Foreground="{ThemeResource AccentColorBrush}"
                        Text="{x:Bind ViewModel.DataModel.OnViewCard.Type, Mode=OneWay}" />
                    <TextBlock
                            Margin="0,15,0,10"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Grid.ColumnSpan="2"
                            x:Uid="CardNumber" />
                        <Grid
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            CornerRadius="5"
                            Padding="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Padding="5"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.CardNumber, Mode=OneWay}" />
                        </Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Grid.Row="3"
                            Grid.Column="1"
                            x:Uid="CVV" />
                        <Grid
                            Grid.Row="4"
                            Grid.Column="1"
                            CornerRadius="5"
                            Margin="0,10,0,10"
                            Padding="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Visibility="{x:Bind HideEyeButton.Visibility, Mode=OneWay}"
                                Padding="5"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.CVV, 
                                Mode=OneWay,
                                Converter={StaticResource MaskConverter}}" />

                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Visibility="{x:Bind ViewEyeButton.Visibility,Mode=OneWay}"
                                Padding="5"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.CVV, Mode=OneWay}" />
                            <Button
                                x:Name="ViewEyeButton"
                                Click="ViewEyeButton_Click"
                                Visibility="Collapsed"
                                FontStretch="Expanded"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                Style="{ThemeResource IconButton}">
                                <FontIcon
                                    FontSize="14"
                                    Glyph="&#xE7B3;" />
                            </Button>
                            <Button
                                x:Name="HideEyeButton"
                                FontStretch="ExtraExpanded"
                                Click="HideEyeButton_Click"
                                Visibility="Visible"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                Style="{ThemeResource IconButton}">
                                <FontIcon
                                    FontSize="14"
                                    Glyph="&#xED1A;" />
                            </Button>

                        </Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Grid.Row="3"
                            x:Uid="ExpiryDate" />
                        <Grid
                            Grid.Row="4"
                            Margin="0,10,5,10"
                            CornerRadius="5"
                            Padding="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">

                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Padding="5"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.ExpiryString, Mode=OneWay}" />
                        </Grid>


                    <Button
                        x:Name="ResetPinButton"
                        Click="ResetPinButton_Click"
                        Margin="0,5,0,0"
                        Grid.Row="5"
                        MinWidth="150"
                        HorizontalAlignment="Center"
                        Grid.ColumnSpan="2"
                        Style="{ThemeResource PrimaryButton}">
                        <Button.Content>
                            <TextBlock
                                x:Uid="ResetPin" />
                        </Button.Content>
                    </Button>
                </Grid>
            </GridViewItem>
            <GridViewItem>
                <Grid
                    VerticalAlignment="Stretch"
                    MinWidth="400"
                    Padding="20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.ColumnSpan="2"
                        FontWeight="SemiBold"
                        Grid.Row="3"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Margin="0,0,20,20"
                        x:Uid="DailyTransactionLimit" />
                    <Slider
                        Style="{ThemeResource CustomSliderStyle}"
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        Minimum="10000"
                        Maximum="50000"
                        StepFrequency="100"
                        x:Name="LimitSlider"
                        Margin="10"
                        Loaded="LimitSlider_Loaded"
                        Value="{x:Bind ViewModel.DataModel.OnViewCard.TransactionLimit, Converter={StaticResource DecimalToDoubleConverter},Mode=OneWay}"
                        ValueChanged="LimitSlider_ValueChanged"
                        SmallChange="100" />
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        FontSize="16"
                        Text="{x:Bind LimitSlider.Minimum, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        HorizontalAlignment="Right"
                        FontSize="16"
                        Text="{x:Bind LimitSlider.Maximum, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />
                    <TextBlock
                        Margin="10"
                        FontSize="16"
                        Grid.Row="7"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        x:Uid="SpendingLimitPerDay" />

                    <TextBlock
                        FontSize="18"
                        Grid.Row="8"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Text="{x:Bind LimitSlider.Value,Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />

                    <Button
                        Style="{ThemeResource PrimaryButton}"
                        Grid.ColumnSpan="2"
                        Grid.Row="9"
                        MinWidth="150"
                        Visibility="{x:Bind LimitSlider.IsEnabled, Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"
                        Click="ChangeLimitButton_Click"
                        x:Name="ChangeLimitButton"
                        Margin="0,30,0,10"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="14">
                        <Button.Content>
                            <TextBlock 
                            x:Uid="UpdateLimit" />
                        </Button.Content>
                    </Button>
                    <Button
                        Style="{ThemeResource PrimaryButton}"
                        Grid.ColumnSpan="2"
                        Grid.Row="9"
                        MinWidth="100"
                        Visibility="{x:Bind LimitSlider.IsEnabled, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                        Click="UpdateLimitSubmitButton_Click"
                        x:Name="UpdateLimitSubmitButton"
                        Margin="0,30,0,10"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        FontSize="14">
                        <Button.Content>
                            <TextBlock
                                x:Uid="Update" />
                        </Button.Content>
                    </Button>

                    <Button
                        MinWidth="100"
                        Style="{ThemeResource SecondaryButton}"
                        Grid.ColumnSpan="2"
                        Grid.Row="9"
                        Visibility="{x:Bind LimitSlider.IsEnabled, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                        Click="CancelUpdateButton_Click"
                        x:Name="CancelUpdateButton"
                        Margin="0,30,0,10"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="14" >
                        <Button.Content>
                            <TextBlock
                            x:Uid="Cancel" />
                        </Button.Content>
                    </Button>
                </Grid>
            </GridViewItem>
            <GridViewItem>
                <Grid>
                    <Grid
                        Visibility="{x:Bind ViewModel.DataModel.IsOnViewCreditCard, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true, Mode=OneWay}"
                        VerticalAlignment="Stretch"
                        MinWidth="400"
                        Padding="20"
                        Margin="5"
                        CornerRadius="8"
                        Background="{ThemeResource ApplicationBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="*" />  
                            <RowDefinition
                                Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.ColumnSpan="2"
                            FontWeight="SemiBold"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Margin="0,0,20,20"
                            x:Uid="DebitCardSummary" />
                        <TextBlock
                            Margin="10"
                            FontSize="16"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            x:Uid="LinkedAccount" />

                        <TextBlock
                            FontSize="18"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.DataModel.OnViewDebitCard.AccountNumber, Mode=OneWay}"
                            HorizontalAlignment="Center" />

                        <Button 
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            MinWidth="150"
                            Margin="20"
                            HorizontalAlignment="Center"
                            Click="Button_Click"
                            Style="{ThemeResource PrimaryButton}">
                            <Button.Content>
                                <TextBlock
                                    x:Uid="GoToAccount" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <Grid
                        Visibility="{x:Bind ViewModel.DataModel.IsOnViewCreditCard, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                        VerticalAlignment="Stretch"
                        MinWidth="400"
                        Padding="20"
                        Margin="5"
                        CornerRadius="8"
                        Background="{ThemeResource ApplicationBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.ColumnSpan="2"
                            FontWeight="SemiBold"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Margin="0,0,20,20"
                            x:Uid="CreditCardSummary" />
                        <TextBlock
                            Margin="10"
                            FontSize="16"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            x:Uid="CardProvider" />

                        <TextBlock
                            FontSize="18"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.DataModel.OnViewCreditCard.CreditCardProvider, Mode=OneWay}"
                            HorizontalAlignment="Center" />

                        <TextBlock
                            Margin="10"
                            FontSize="16"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            x:Uid="CreditLimit" />

                        <TextBlock
                            FontSize="18"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.DataModel.OnViewCreditCard.CreditLimit, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"
                            HorizontalAlignment="Center" />

                        <TextBlock
                            Margin="10"
                            FontSize="16"
                            Grid.Row="4"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            x:Uid="TotalOutstanding" />

                        <TextBlock
                            FontSize="18"
                            Grid.Row="4"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.DataModel.OnViewCreditCard.TotalOutstanding, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"
                            HorizontalAlignment="Center" />

                        <TextBlock
                            Margin="10"
                            FontSize="16"
                            Grid.Row="5"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            x:Uid="MinimumOutstanding" />

                        <TextBlock
                            FontSize="18"
                            VerticalAlignment="Center"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5"
                            Foreground="IndianRed"
                            Text="{x:Bind ViewModel.DataModel.OnViewCreditCard.MinimumOutstanding, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"
                            HorizontalAlignment="Center" />

                        <Button
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            MinWidth="150"
                            Margin="10"
                            x:Name="PayCardButton"
                            HorizontalAlignment="Center"
                            Click="PayCardButton_Click"
                            Style="{ThemeResource PrimaryButton}">
                            <Button.Content>
                                <TextBlock
                                    x:Uid="SettleCard" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </GridViewItem>
        </GridView>
    </Grid>
</Page>
 