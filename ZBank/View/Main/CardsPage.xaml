<Page
    x:Class="ZBank.View.Main.CardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZBank.View.Main"
    xmlns:converter="using:ZBank.Utilities.Converters"
    xmlns:usercontrols="using:ZBank.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded">
    <Page.Resources>
        <converter:CurrencyConverter
            x:Key="CurrencyConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" /> 
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" /> 
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Margin="5"
                Padding="20"
                CornerRadius="8"
                Background="{ThemeResource ApplicationBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Text="Total Credit Cards" />
                <TextBlock
                    Padding="10"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    Text="1" />
            </Grid>
            <Grid
                Margin="5"
                Grid.Column="1"
                Padding="20"
                CornerRadius="8"
                Background="{ThemeResource ApplicationBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    FontWeight="Bold"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Text="Total Debit Cards" />
                <TextBlock
                    Padding="10"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    Text="1" />
            </Grid>
        </Grid>
         <Grid
             Margin="10"
             Grid.Row="1"
             Background="Transparent"
             MaxWidth="800"
             HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" /> 
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                HorizontalAlignment="Left"
                Canvas.ZIndex="20"
                x:Name="LeftCard"
                Opacity="0.3"
                Width="300"
                Height="180"
                Margin="0,0,0,10">
                <usercontrols:CardElementView TemplateCard="{x:Bind ViewModel.DataModel.LeftCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Canvas.ZIndex="40"
                Grid.Column="1"
                x:Name="OnViewCard"
                Width="350"
                Height="200"
                Margin="0,0,0,10"
                HorizontalAlignment="Center">
                <usercontrols:CardElementView
                    TemplateCard="{x:Bind ViewModel.DataModel.OnViewCard, Mode=OneWay}" />
            </Grid>
            <Grid
                Opacity="0.3"
                HorizontalAlignment="Right"
                Canvas.ZIndex="20"
                x:Name="RightCard"
                Width="300"
                Height="180"
                Margin="0,0,0,10">
                <usercontrols:CardElementView
                    TemplateCard="{x:Bind ViewModel.DataModel.RightCard, Mode=OneWay}" />
            </Grid>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Grid.Row="1">
                <Button
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    Style="{ThemeResource FrameNavButton}"
                    Command="{x:Bind ViewModel.PreviousCardCommand}"
                    CornerRadius="40"
                    Padding="5"
                    Margin="20,0,20,0"
                    x:Name="PreviousButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00E;" />
                    </Button.Content>
                </Button>
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{ThemeResource SystemAccentColor}"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Text="1" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Margin="5,0,5,0"
                    Text="/" /> 
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Text="1" />
                <Button
                    Style="{ThemeResource FrameNavButton}"
                    CornerRadius="40"
                    Command="{x:Bind ViewModel.NextCardCommand}"
                    Padding="5"
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    x:Name="NextButton">
                    <Button.Content>
                        <FontIcon
                            FontSize="18"
                            Glyph="&#xE00F;" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <usercontrols:OneByTwoGrid
            Grid.Row="2"> 
            <usercontrols:OneByTwoGrid.Column1Content>
                <Grid
                    HorizontalAlignment="Stretch"
                    Padding="20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        FontSize="18"
                        Text="Card Details" />
                    <Grid
                        Grid.Row="1"
                        MaxWidth="500">
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Margin="0,10,0,10"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Text="Card Number" />

                        <Grid
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            CornerRadius="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Padding="10"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.CardNumber, Mode=OneWay}" />
                        </Grid>
                        <TextBlock
                            Margin="0,20,0,0"
                            Grid.Row="6"
                            Grid.Column="1"
                            Text="CVV" />
                        <Grid
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="5,10,0,10"
                            CornerRadius="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Padding="10"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.CVV, Mode=OneWay}" />
                            <Button
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                Style="{ThemeResource IconButton}">
                                <FontIcon
                                    Glyph="&#xE7B3;" />
                            </Button>
                        </Grid>
                        <TextBlock
                            Margin="0,20,0,0"
                            Grid.Row="6"
                            Text="Expiry Date" />
                        <Grid
                            Grid.Row="7"
                            Margin="0,10,5,10"
                            CornerRadius="5"
                            Background="{ThemeResource ApplicationBackgroundThemeBrush}">

                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Padding="10"
                                Text="{x:Bind ViewModel.DataModel.OnViewCard.ExpiryMonth, Mode=OneWay}" />
                        </Grid>
                    </Grid>

                    <TextBlock
                        Grid.Row="2"
                        Margin="0,20,0,20"
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        FontSize="18"
                        Text="Card Settings" />
                    <Button
                        Grid.Row="3"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        MinWidth="200"
                        Style="{ThemeResource PrimaryButton}">
                        <Button.Content>
                            <TextBlock
                                Text="Reset Pin" />
                        </Button.Content>
                    </Button>
                </Grid>
            </usercontrols:OneByTwoGrid.Column1Content>
            <usercontrols:OneByTwoGrid.Column2Content>
                <Grid
                    HorizontalAlignment="Stretch"
                    Padding="20"
                    Margin="5"
                    CornerRadius="8"
                    Background="{ThemeResource ApplicationBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="Auto" />   <RowDefinition
                            Height="Auto" />   <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,20,0,10"
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="Card Limit" />
                    <HyperlinkButton
                        Margin="0,20,0,10"
                        FontWeight="SemiBold"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        FontSize="14"
                        Content="Change" />
                    <ProgressBar
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Margin="10,30,10,20"
                        CornerRadius="4"
                        Height="8"
                        Value="39" />
                  
                </Grid>
            </usercontrols:OneByTwoGrid.Column2Content>
        </usercontrols:OneByTwoGrid>
    </Grid>
</Page>
 