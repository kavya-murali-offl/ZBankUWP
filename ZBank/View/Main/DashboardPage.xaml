                    </usercontrol:CardControl.MyContent>
                </usercontrol:CardControl>

                <usercontrol:CardControl
                    Grid.Row="1"
                    MyTitle="Quick Actions">
                    <usercontrol:CardControl.MyContent>
                        <ScrollViewer
                            HorizontalScrollBarVisibility="Auto">
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    Padding="5"
                                    Width="100"
                                    Style="{ThemeResource SecondaryButton}">
                                    <Button.Content>
                                        <StackPanel>
                                            <FontIcon
                                                Glyph="&#xE1CA;"
                                                FontFamily="Segoe MDL2 Assets" />
                                            <TextBlock
                                                Padding="5,5,5,0"
                                                Text="Self Transfer" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button
                                    Width="100"
                                    Style="{ThemeResource SecondaryButton}"
                                    Padding="5">
                                    <Button.Content>
                                        <StackPanel>
                                            <FontIcon
                                                Glyph="&#xE1CD;"
                                                FontFamily="Segoe MDL2 Assets" />
                                            <TextBlock
                                                Padding="5,5,5,0"
                                                Text="Split" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button
                                    Width="100"
                                    Padding="7"
                                    Style="{ThemeResource SecondaryButton}">
                                    <Button.Content>
                                        <StackPanel>
                                            <FontIcon
                                                Glyph="&#xE2B3;"
                                                FontFamily="Segoe MDL2 Assets" />
                                            <TextBlock
                                                Padding="5,5,5,0"
                                                Text="Request" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>
                    </usercontrol:CardControl.MyContent>
                </usercontrol:CardControl>

                <usercontrol:CardControl
                    Grid.Row="2"
                    MyTitle="Notifications">
                </usercontrol:CardControl>
            </Grid>
        </Grid>
    </Grid>


</Page>
